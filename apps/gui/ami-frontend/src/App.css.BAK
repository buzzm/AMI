.App {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.main-container {
    display: flex;
    flex: 1;
    padding: 10px;
}

.left-box, .right-box {
    flex: 1;
    padding: 10px;
    box-sizing: border-box;
    border: 1px solid #ddd;
}

.left-box {
    margin-right: 20px;
    overflow-y: auto;
    white-space: pre-wrap;
}

.right-box {
    overflow: auto;
}

.input-container {
    display: flex;
    padding: 10px;
    position: sticky;
    bottom: 0;
    background-color: white;
}

.input-box {
    flex: 1;
    height: 50px;
    margin-right: 10px;
}

.go-button {
    padding: 10px 20px;
}

.stash-prompt {
    padding: 10px;
}
